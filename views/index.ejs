<body>
  <div class="container-fluid">
    <nav class="navbar bg-dark navbar-expand-lg navbar-dark">
      <a class="navbar-brand" href="">Welcome</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <a class="nav-link" href="contact">Contact</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="">Pricing</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="login">Admin</a>
          </li>

        </ul>
      </div>
    </nav>
  </div>
  <!-- <br>
  <br> -->
  <div>Date : <%= date %>
  </div>

  <div class="entry">
    <form class="input" action="/" method="post" name="userdetails">
      <div class="name">
        <label for="name">ENTER YOUR NAME :</label>
        <input type="text" name="name" value="" id="userName" placeholder="NAME">

      </div> <br>
      <div class="mobilenum">
        <label for="number">ENTER YOUR MOBILE NUMBER :</label>
        <input type="text" id="mobile" name="mobile" value="" placeholder="Number">

      </div>
      <br>


      <br>

      <div class="start">
        <label for="rout-select-start">Choose start location:</label>

        <select name="start" id="rout-select-start" placeholder="routs1">
          <option value="" hidden>--Please choose an option--</option>
          <option value="1">Madurai</option>
          <option value="2">Rajapalayam</option>
          <option value="3">Sankarankovil</option>
          <option value="4">Thenkasi</option>

        </select>
      </div>

      <br>
      <br>
      <div class="destination">
        <label for="rout-select-end">Choose your destination:</label>

        <select name="destination" id="rout-select-end" placeholder="routs2">
          <option value="" hidden>--Please choose an option--</option>
          <option value="4">Thenkasi</option>
          <option value="3">Sankarankovil</option>
          <option value="2">Rajapalayam</option>
          <option value="1">Madurai</option>
          <!--(1-2=price=50),(1,3=price-75),(1,4=price=100),,(2,1=75),(2,3=25),(2,4=45),,(3,1=75),(3,2=25),(3,4=35),,(4,1=100),(4,2=45),(4,3=35)-->

        </select>

      </div>

      <br>
      <br>
      <div class="price">
        <label for="price">Price :</label>
        <div id="price"></div>
      </div>
      <div class="button">
        <button type="button" id="rzp-button1" class="btn btn-dark btn-sm"><i class="fab fa-amazon-pay"></i> Pay</button>
        <script defer src="https://checkout.razorpay.com/v1/checkout.js"></script>
      </div>
    </form>
  </div>










</body>

</html>